

<div class="well">
  <div class="row">
    <%= link_to '<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>'.html_safe + 
            "Back", root_path%>
  </div>
  <div class="row">
    <h1 class="text-center">Listing sparql queries</h1>
  </div>
</div>

<div class="row text-center">
  <div class="col-sm-6">
    <%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>'.html_safe + " New Sparql Query", new_sparql_query_path, class:"btn btn-success"%>
    <button type="button" class="btn btn-default" id="starBtn" aria-label="Left Align">
      <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
    </button>
  </div>
  <div class="form-inline col-sm-6">
    <div class="form-group">
      <input type="text" class="form-control" id="searchBar" placeholder="Search">
    </div>
  </div>
</div>

<br/>

<div id="queryData">
  <% @sparql_queries.each do |sparql_query| %>
    <div class="row" id="queryRow" updateTime='<%= sparql_query.updated_at %>'>
        <div class="col-xs-6 col-sm-8 text-center">
          <h5><%= link_to sparql_query.name, sparql_query %></h5>
        </div>
        <div class="col-xs-3 col-sm-2">
          <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_sparql_query_path(sparql_query), class:"btn btn-info btn-block"%>
        </div>
        <div class="col-xs-3 col-sm-2">
          <%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, sparql_query, class:"btn btn-danger btn-block", method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    </div>
  <% end %>
</div>

<br/>

<div class="row text-center">
  <div class="col-xs-12">
    <div id="pagination"></div>
  </div>
</div>

<script>
$('document').ready(function() {
  
  // filter for search bar

  $('#searchBar').keyup(function(){
    var valThis = $(this).val().toLowerCase();
    if(valThis == ""){
        $('#queryData #queryRow').show();           
    } else {
        $('#queryData #queryRow').each(function(){
            var text = $(this).text().toLowerCase();
            (text.indexOf(valThis) >= 0) ? $(this).show() : $(this).hide();
        });
      };
    });

  // sort by update time

  var starBtnClicked = true;

  $('#starBtn').click(function () {

    jQuery.fn.sortDomElements = (function() {
      return function(comparator) {
          return Array.prototype.sort.call(this, comparator).each(function(i) {
                this.parentNode.appendChild(this);
          });
      };
    })();

    $("#queryData").children().sortDomElements(function(a,b){
      akey = $(a).attr("updateTime");
      bkey = $(b).attr("updateTime");

      if(starBtnClicked) {

        if (akey == bkey) return 0;
        if (akey < bkey) return -1;
        if (akey > bkey) return 1;

      } else {
        
        if (akey == bkey) return 0;
        if (akey > bkey) return -1;
        if (akey < bkey) return 1;

      }
    })

    starBtnClicked = !starBtnClicked;
  });

  // set up pagination 

  var items = $("#queryData #queryRow");
  var numItems = items.length;
  var perPage = 10;
  var selector = "#pagination";

  customPagination(items, numItems, perPage, selector);

});
</script>

<style>
/* center pagination block */
.simple-pagination ul {
  display: inline-block;
}
</style>
