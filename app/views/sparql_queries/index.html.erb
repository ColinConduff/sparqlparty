
<div class="container">
  <div class="well" style="background-color:#3366ff">
    <h1 class="text-center">Listing sparql queries</h1>
  </div>

  <%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>'.html_safe, new_sparql_query_path%>
  
  <% @sparql_queries.each do |sparql_query| %>
    <div class="row">
        <div class="col-xs-6 col-sm-8 text-center">
          <h5><%= link_to sparql_query.name, sparql_query %></h5>
        </div>
        <div class="col-xs-3 col-sm-2">
          <div class="btn btn-info btn-block">
            <%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_sparql_query_path(sparql_query)%>
          </div>
        </div>
        <div class="col-xs-3 col-sm-2">
          <div class="btn btn-danger btn-block">
            <%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, sparql_query, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-xs-8 text-center">
      <%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>'.html_safe, new_sparql_query_path%>
    </div>
  </div>
</div>